{
  "name": "@clanki/recap",
  "version": "0.1.0",
  "description": "A CLI tool that generates fair, unbiased engineering reviews from your GitHub activity",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "bin": {
    "recap": "./dist/index.js"
  },
  "files": [
    "dist/**/*.js",
    "README.md",
