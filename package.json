  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/commander": "^2.12.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.3.0",
    "commander": "^14.0.3",
    "ora": "^9.3.0"
  }
